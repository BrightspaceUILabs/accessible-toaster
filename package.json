{
  "name": "@brightspace-ui-labs/toaster",
  "version": "2.0.0",
  "description": "A component for managing and displaying toast events",
  "author": "D2L Corporation",
  "license": "Apache-2.0",
  "main": "index.js",
  "module": "index.js",
  "repository": "https://github.com/BrightspaceUILabs/accessible-toaster",
  "scripts": {
    "start": "web-dev-server --node-resolve --open --watch --app-index demo/index.html",
    "lint": "eslint --ext .js,.html . --ignore-path .gitignore && prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format": "eslint --ext .js,.html . --fix --ignore-path .gitignore && prettier \"**/*.js\" --write --ignore-path .gitignore",
    "test:headless": "web-test-runner",
    "test:headless:watch": "web-test-runner --watch",
    "test:headless:ci": "web-test-runner --playwright --browsers chromium firefox webkit"
  },
  "dependencies": {
    "@brightspace-ui/core": "^2",
    "lit-element": "^3",
    "lit-html": "^2"
  },
  "devDependencies": {
    "@open-wc/eslint-config": "^4.3.0",
    "@open-wc/testing": "^3",
    "@web/dev-server": "^0.1",
    "@web/test-runner": "^0.12.20",
    "@web/test-runner-playwright": "^0.9.0",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^7.2.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "prettier": "^2.2.1"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "index.js",
    "src/ToastEvent.js",
    "src/Toaster.js"
  ],
  "release": {
    "branches": [
      "main"
    ]
  }
}
